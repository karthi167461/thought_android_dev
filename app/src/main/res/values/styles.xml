<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">@color/clr_white</item>

    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/clr_white</item>
    </style>

    <style name="Button.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@null</item>
    </style>


    <style name="CustomProgress" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <!-- Customize your theme here. -->
        <item name="android:lines">1</item>
        <item name="android:maxLength">40</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>

        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="TextViewTheme">
        <item name="android:gravity">start</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
    </style>
    <!--<style name="TextAppearance.FontPath" parent="android:TextAppearance">-->
    <!--&lt;!&ndash; Custom Font Attr&ndash;&gt;-->
    <!--<item name="fontPath">fonts/Laksaman.ttf</item>-->
    <!--</style>-->

    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/clr_white</item>
    </style>

    <style name="TextStyle.Heading" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <!--<item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>-->
    </style>

    <style name="Toolbar.TitleText" parent="TextStyle.Heading">
        <item name="android:textColor">@color/clr_white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/clr_white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="CircularProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">#eee0</item>
    </style>
</resources>
